{
  "openapi": "3.0.0",
  "info": {
    "title": "APGMS Gateway",
    "description": "API Gateway OpenAPI specification",
    "version": "1.0.0"
  },
  "servers": [
    { "url": "/" }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    { "bearerAuth": [] }
  ],
  "paths": {
    "/dashboard/generate-report": {
      "post": {
        "description": "Generate a report for the given period",
        "tags": ["reports"],
        "security": [
          { "bearerAuth": [] }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "reportType": {
                    "type": "string",
                    "enum": [
                      "COMPLIANCE_SUMMARY",
                      "PAYMENT_HISTORY",
                      "TAX_OBLIGATIONS",
                      "DISCREPANCY_LOG"
                    ]
                  },
                  "startDate": {
                    "type": "string",
                    "pattern": "^\\\d{4}-\\\d{2}-\\\d{2}$"
                  },
                  "endDate": {
                    "type": "string",
                    "pattern": "^\\\d{4}-\\\d{2}-\\\d{2}$"
                  }
                },
                "required": [
                  "reportType",
                  "startDate",
                  "endDate"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Report generation acknowledged",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "reportId": { "type": "string" }
                  },
                  "required": ["reportId"]
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": { "type": "string" }
                  }
                }
              }
            }
          },
          "422": {
            "description": "Validation error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": { "type": "string" },
                    "errors": { "type": "object" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/dashboard/report/{id}/download": {
      "get": {
        "description": "Download a generated report PDF by id",
        "tags": ["reports"],
        "security": [
          { "bearerAuth": [] }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "PDF file",
            "content": {
              "application/pdf": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": { "type": "string" }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
