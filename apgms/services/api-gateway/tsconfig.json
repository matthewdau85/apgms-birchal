{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "baseUrl": "../../",
    "paths": {
      "@apgms/shared/*": ["shared/src/*"]
    },
    "outDir": "dist",
    "sourceMap": false
  },
  "include": ["src"],
  "exclude": ["dist"]
}
