{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": "../../",
    "paths": {
      "@apgms/shared/*": ["shared/src/*"],
      "@apgms/policy-engine": ["shared/policy-engine/index.ts"],
      "@apgms/policy-engine/*": ["shared/policy-engine/*"]
    }
  },
  "include": ["src"]
}
