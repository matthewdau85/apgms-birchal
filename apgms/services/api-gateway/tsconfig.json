{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": "../../",
    "paths": {
      "@apgms/shared/*": ["shared/src/*"],
      "@apgms/shared-au/*": ["shared/au/*"]
    }
  },
  "include": ["src", "test", "src/schemas"]
}
