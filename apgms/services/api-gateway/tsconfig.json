{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": "../../",
    "paths": {
      "@apgms/shared/*": ["shared/src/*"],
      "@apgms/payments/*": ["services/payments/src/*"],
      "@apgms/services-shared/*": ["services/shared/src/*"]
    }
  },
  "include": ["src"]
}
