{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": "../../",
    "paths": {
      "@apgms/shared/*": ["shared/src/*"],
      "@fastify/helmet": ["services/api-gateway/src/plugins/helmet"],
      "@fastify/rate-limit": ["services/api-gateway/src/plugins/rate-limit"]
    }
  },
  "include": ["src"]
}
