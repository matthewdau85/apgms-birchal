{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GstSummary",
  "type": "object",
  "required": ["labels", "explain"],
  "properties": {
    "labels": {
      "type": "object",
      "required": ["1A", "1B", "G1", "G2"],
      "properties": {
        "1A": { "type": "integer", "description": "GST on sales in cents" },
        "1B": { "type": "integer", "description": "GST on purchases in cents" },
        "G1": { "type": "integer", "description": "Total sales in cents" },
        "G2": { "type": "integer", "description": "GST-free sales in cents" }
      },
      "additionalProperties": false
    },
    "explain": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": false
}
