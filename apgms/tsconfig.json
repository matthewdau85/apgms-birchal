{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@apgms/shared": ["shared/src/index.ts"],
      "@apgms/shared/*": ["shared/src/*"],
      "@apgms/sbr": ["services/sbr/src/index.ts"],
      "@apgms/sbr/*": ["services/sbr/src/*"]
    }
  }
}
