{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@apgms/shared/*": ["shared/src/*"],
      "vitest": ["tools/vitest-lite/src/index"],
      "vitest/*": ["tools/vitest-lite/src/*"]
    }
  }
}
