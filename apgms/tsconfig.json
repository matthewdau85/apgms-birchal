{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@apgms/shared/*": ["shared/src/*"],
      "@apgms/policy-engine": ["shared/policy-engine/index.ts"],
      "@apgms/policy-engine/*": ["shared/policy-engine/*"]
    }
  }
}
