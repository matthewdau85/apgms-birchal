{
  "ci": {
    "collect": {
      "staticDistDir": "webapp/dist",
      "numberOfRuns": 1
    },
    "assert": {
      "preset": "lighthouse:recommended"
    },
    "upload": {
      "target": "temporary-public-storage"
    },
    "budgets": [
      {
        "path": "/",
        "timings": [
          {
            "metric": "first-contentful-paint",
            "budget": 2000
          },
          {
            "metric": "total-blocking-time",
            "budget": 200
          }
        ]
      },
      {
        "path": "/bank-lines",
        "timings": [
          {
            "metric": "first-contentful-paint",
            "budget": 2000
          },
          {
            "metric": "total-blocking-time",
            "budget": 200
          }
        ]
      }
    ]
  }
}
