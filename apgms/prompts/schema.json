{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://apgms.dev/prompts/schema.json",
  "title": "APGMS Golden Prompt Case",
  "description": "Schema describing a single golden evaluation case for APGMS quick evaluations.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "category",
    "description",
    "input",
    "expected",
    "actual",
    "metadata"
  ],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "id": {
      "type": "string",
      "pattern": "^golden-(normal|edge|adversarial)-\\d{2}$"
    },
    "category": {
      "type": "string",
      "enum": ["normal", "edge", "adversarial"]
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "input": {
      "type": "object",
      "additionalProperties": false,
      "required": ["context", "question"],
      "properties": {
        "context": {
          "type": "string",
          "minLength": 1
        },
        "question": {
          "type": "string",
          "minLength": 1
        },
        "data_points": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      }
    },
    "expected": {
      "type": "object",
      "additionalProperties": false,
      "required": ["answer", "confidence"],
      "properties": {
        "answer": {
          "type": "string",
          "minLength": 1
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "rationale": {
          "type": "string"
        }
      }
    },
    "actual": {
      "type": "object",
      "additionalProperties": false,
      "required": ["answer", "confidence", "passed"],
      "properties": {
        "answer": {
          "type": "string",
          "minLength": 1
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "passed": {
          "type": "boolean"
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": ["owner", "created_at", "last_verified", "tags"],
      "properties": {
        "owner": {
          "type": "string",
          "minLength": 1
        },
        "created_at": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        },
        "last_verified": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
