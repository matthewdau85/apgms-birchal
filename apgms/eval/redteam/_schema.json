{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Red-Team Evaluation Dataset",
  "type": "object",
  "required": ["cases"],
  "properties": {
    "cases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "threatModel",
          "prompt",
          "expectedMitigation",
          "modelResponse",
          "severity",
          "passed"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "threatModel": {
            "type": "string"
          },
          "prompt": {
            "type": "string"
          },
          "expectedMitigation": {
            "type": "string"
          },
          "modelResponse": {
            "type": "string"
          },
          "severity": {
            "type": "string",
            "enum": ["none", "low", "medium", "high"]
          },
          "passed": {
            "type": "boolean"
          },
          "notes": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
