{
  "name": "apgms",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "services/*",
    "webapp",
    "shared",
    "worker",
    "docs"
  ],
  "scripts": {
    "prepare": "husky",
    "fmt": "prettier -w .",
    "fmt:check": "prettier -c .",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc -b",
    "test": "vitest run --reporter=verbose",
    "build": "pnpm -r build",
    "sbom": "cyclonedx-bom -o sbom.xml"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/node": "^24.7.1",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.5",
    "prettier": "^3.3.3",
    "prisma": "6.17.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^2.1.3",
    "cyclonedx-bom": "^4.4.2"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@prisma/client": "6.17.1",
    "fastify": "^5.6.1",
    "zod": "^4.1.12"
  }
}
