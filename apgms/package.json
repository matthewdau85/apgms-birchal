{
  "name": "apgms",
  "private": true,
  "version": "0.1.0",
  "workspaces": ["services/*", "webapp", "shared", "worker"],
  "scripts": {
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "db:generate": "pnpm --filter @apgms/shared prisma:generate",
    "db:validate": "pnpm --filter @apgms/shared db:validate",
    "db:migrate:dev": "prisma migrate dev --schema=shared/prisma/schema.prisma",
    "db:migrate:deploy": "prisma migrate deploy --schema=shared/prisma/schema.prisma",
    "db:migrate:status": "prisma migrate status --schema=shared/prisma/schema.prisma",
    "db:seed": "tsx scripts/seed.ts"
  },
  "devDependencies": {
    "@types/node": "^24.7.1",
    "prisma": "6.17.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@prisma/client": "6.17.1",
    "dotenv": "^16.6.1",
    "fastify": "^5.6.1",
    "zod": "^4.1.12"
  }
}
