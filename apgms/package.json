{
  "name": "apgms",
  "private": true,
  "version": "0.1.0",
  "workspaces": ["services/*", "webapp", "shared", "worker"],
  "scripts": {
    "build": "pnpm -r run build",
    "typecheck": "pnpm -r run typecheck",
    "dev": "concurrently \"pnpm dev:api\" \"pnpm dev:web\" \"pnpm dev:worker\"",
    "dev:api": "pnpm --filter @apgms/api-gateway dev",
    "dev:web": "pnpm --filter @apgms/webapp dev",
    "dev:worker": "pnpm --filter @apgms/worker dev",
    "prisma:generate": "pnpm --filter @apgms/shared run prisma:generate"
  },
  "devDependencies": {
    "@types/node": "^24.7.1",
    "concurrently": "^9.1.0",
    "prisma": "6.17.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
