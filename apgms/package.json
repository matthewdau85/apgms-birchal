{
  "name": "apgms",
  "private": true,
  "version": "0.1.0",
  "workspaces": ["services/*", "webapp", "shared", "worker"],
  "scripts": {
    "build": "pnpm -r run build",
    "test": "pnpm run test:unit && pnpm run test:integration && pnpm run test:e2e",
    "test:unit": "pnpm --filter @apgms/shared test",
    "test:integration": "pnpm --filter @apgms/api-gateway test",
    "test:e2e": "pnpm exec playwright test"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.2",
    "@types/node": "^24.7.1",
    "prisma": "6.17.1",
    "tsx": "^4.20.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@prisma/client": "6.17.1",
    "fastify": "^5.6.1",
    "zod": "^4.1.12"
  }
}
